        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Candidate.Firstname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Interview.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Jobs.JobName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Round)
            </td>
